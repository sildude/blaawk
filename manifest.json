{
  "manifest_version": 3,
  "name": "Blaawk",
  "description": "Extension to block websites that waste your time. Made for productivity.",
  "version": "1.2.1",
  "permissions": ["declarativeNetRequest", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/b_16.png",
      "32": "icons/b_32.png",
      "48": "icons/b_48.png",
      "128": "icons/b_128.png"
    }
  },
  "icons": {
    "16": "icons/b_16.png",
    "32": "icons/b_32.png",
    "48": "icons/b_48.png",
    "128": "icons/b_128.png"
  }
}
